@model IEnumerable<Parcial2OS2.Models.Articulos>

@{
    ViewData["Title"] = "Articulos";
    List<Parcial2OS2.Models.TipoInventario> Inventarios = ViewBag.ListaInventario;
}

<h1>Articulos</h1>

<p>
    <a asp-action="Create">Crear Nuevo</a>
</p>
<table class="table">
    <thead>
        <tr>
            <th>
                @Html.DisplayNameFor(model => model.Descripcion)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Existencia)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.ID_TipoInventario)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.CostoUnitario)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Estado)
            </th>
            <th></th>
        </tr>
    </thead>
    <tbody>
@foreach (var item in Model) {
        <tr>
            <td>
                @Html.DisplayFor(modelItem => item.Descripcion)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.Existencia)
            </td>
            <td>
                @Inventarios.Find(x=> x.ID_TipoInventario == item.ID_TipoInventario).Descripcion
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.CostoUnitario)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.Estado)
            </td>
            <td>
                <a asp-action="Edit" asp-route-id="@item.ID_Articulo">Edit</a> |
                <a asp-action="Details" asp-route-id="@item.ID_Articulo">Details</a> |
                <a asp-action="Delete" asp-route-id="@item.ID_Articulo">Delete</a>
            </td>
        </tr>
}
    </tbody>
</table>
