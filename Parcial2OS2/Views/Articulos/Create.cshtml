@model Parcial2OS2.Models.Articulos

@{
    ViewData["Title"] = "Create";
}

<h1>Create</h1>

<h4>Articulos</h4>
<hr />
<div class="row">
    <div class="col-md-4">
        <form asp-action="Create">
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>
            <div class="form-group">
                <label asp-for="Descripcion" class="control-label"></label>
                <input asp-for="Descripcion" class="form-control" />
                <span asp-validation-for="Descripcion" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="Existencia" class="control-label"></label>
                <input asp-for="Existencia" class="form-control" />
                <span asp-validation-for="Existencia" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="ID_TipoInventario" class="control-label"></label>
                <select asp-for="ID_TipoInventario" class="form-control" asp-items="@Model.ListOfInventarios">
                    <!--- <option value="Text">Seleccione la opcion deseada</option>-->
                </select>
                <span asp-validation-for="ID_TipoInventario" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="CostoUnitario" class="control-label"></label>
                <input asp-for="CostoUnitario" class="form-control" />
                <span asp-validation-for="CostoUnitario" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="Estado" class="control-label"></label>
                <input asp-for="Estado" class="form-control" />
                <span asp-validation-for="Estado" class="text-danger"></span>
            </div>
            <div class="form-group">
                <input type="submit" value="Create" class="btn btn-primary" />
            </div>
        </form>
    </div>
</div>

<div>
    <a asp-action="Index">Back to List</a>
</div>

@section Scripts {
    @{await Html.RenderPartialAsync("_ValidationScriptsPartial");}
}
